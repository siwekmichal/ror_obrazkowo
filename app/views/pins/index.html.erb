

<div class="panel panel-default">
    <div class="panel-heading">
      <h1>Lista pinów</h1>
    </div>
    <div class="panel-body">
      <table class="table table-striped"
        <thead>
          <tr>
            <th></th>
            <th>Opis</th>
            <th colspan="3"></th>
          </tr>
        </thead>
      
        <tbody>
          <% @pins.each do |pin| %>
            <tr>
              <td><%= image_tag pin.image.url(:medium) %></td>
              <td><%= pin.description %></td>
              <td><%= link_to 'Wyświetl', pin %></td>
              <% if pin.user == current_user %>
                <td><%= link_to 'Edycja', edit_pin_path(pin) %></td>
                <td><%= link_to 'Usuń', pin, method: :delete, data: { confirm: 'Jesteś pewien?' } %></td>
              <% else %>
                <td colspan="2"></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
<br>
    <div class="panel-footer">
        <%= link_to 'Nowy pin', new_pin_path %>
    </div>
</div>

